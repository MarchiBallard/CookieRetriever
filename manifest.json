{
  "manifest_version": 3,
  "name": "CrmOwinAuth Cookie Retriever",
  "version": "1.0",
  "description": "Retrieves the CrmOwinAuth cookie value from dynamics.com",
  "permissions": [
    "cookies",
    "activeTab"
  ],
  "host_permissions": [
    "https://*.dynamics.com/*"
  ],
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}